<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageOefening"
             Padding="20">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center">

        <!-- Tekstveld + testknoppen -->
        <Label x:Name="SentenceLabel"
            Text="Klik op 'Volgende zin' om te beginnen" />
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Volgende zin"
                    Clicked="OnVolgendeButtonClicked" />

            <Button Text="Reset"
                    Clicked="OnResetButtonClicked" />
        </HorizontalStackLayout>

        <!-- Invoerveld -->
        <Border BackgroundColor="White"
                StrokeThickness="1"
                Stroke="#D3D3D3"
                Padding="20"
                HeightRequest="150">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>

            <Editor Placeholder="Begin hier te typen..."
                    FontFamily="Consolas, Monaco, monospace"
                    FontSize="16"
                    TextColor="#374151"
                    PlaceholderColor="#9CA3AF"
                    BackgroundColor="Transparent"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    AutoSize="TextChanges"/>
        </Border>

    </VerticalStackLayout>
</ContentView>