<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageOefening">

    <VerticalStackLayout Padding="15" Spacing="15">
        <HorizontalStackLayout>
            <Frame>
                <Label Text="Snelheid: N/A"/>
            </Frame>
            <Frame>
                <Label Text="Nauwkeurigheid: N/A"/>
            </Frame>
            <Frame>
                <Label Text="Tijd: N/A"/>
            </Frame>
        </HorizontalStackLayout>
        <Frame WidthRequest="500">
            <VerticalStackLayout Spacing="10">
            <!-- De zin die getypt moet worden -->
            <Label x:Name="CorrectText" Style="{StaticResource Text18}" />

            <!-- Gekleurde output -->
            <Label x:Name="ColoredOutput" Style="{StaticResource Text18}" />

            <!-- Foutenteller -->
            <Label x:Name="FoutenCount" Text="Fouten: 0" Style="{StaticResource Text18}"/>

            <!-- Start knop -->
            <Button Text="Start oefening" Clicked="Startknop_Clicked" Style="{StaticResource OefeningStart}"/>
            </VerticalStackLayout>
        </Frame>
        <!-- Onzichtbare editor die geen ruimte inneemt -->
        <Editor x:Name="InputEditor" TextChanged="InputEditor_TextChanged" Style="{StaticResource OefeningEditor}"/>
    </VerticalStackLayout>

</ContentView>
