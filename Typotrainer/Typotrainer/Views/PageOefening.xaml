<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageOefening">

    <VerticalStackLayout Padding="30" Spacing="25">

        <!-- Titel -->
        <Label Text="Typ onderstaande zin over."
               FontSize="12"
               HorizontalOptions="Center"
               TextColor="Grey" />

        <!-- De zin die getypt moet worden -->
        <Label x:Name="CorrectText"
               FontSize="22"
               TextColor="black"
               HorizontalOptions="Center" />

        <!-- Gekleurde output -->
        <Label x:Name="ColoredOutput"
               FontSize="26"
               HorizontalOptions="Center"
               LineBreakMode="NoWrap" />

        <!-- Onzichtbare editor die geen ruimte inneemt -->
        <Editor x:Name="InputEditor"
                TextChanged="InputEditor_TextChanged"
                AutoSize="TextChanges"
                Opacity="0"
                HeightRequest="1" />

        <!-- Start knop -->
        <Button Text="Start oefening"
                FontSize="20"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentView>
