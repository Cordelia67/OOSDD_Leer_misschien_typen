<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.MainPage"
             xmlns:ContentView="clr-namespace:Typotrainer.Views"
             Title="TypoTrainer">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Inloggen"
            Clicked="PageInloggenClicked" />
        <ToolbarItem Text="Aanmelden"
            Clicked="PageAanmeldenClicked" />
        <ToolbarItem Text="Dashboard"
            Clicked="PageDashboardClicked" />
        <ToolbarItem Text="Oefening starten"
            Clicked="PageOefeningClicked" />
        <ToolbarItem Text="Adaptieve oefening"
            Clicked="PageAdaptieveOefeningClicked" />
        <ToolbarItem Text="Resultaten en voortgang"
            Clicked="PageResultatenClicked" />
        <ToolbarItem Text="Instellingen"
            Clicked="PageInstellingenClicked" />
    </ContentPage.ToolbarItems>

    <ContentView x:Name="SubPage"/>
</ContentPage>