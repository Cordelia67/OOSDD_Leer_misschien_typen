<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.MainPage"
             xmlns:ContentView="clr-namespace:Typotrainer.Views"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Frame Style="{StaticResource Header}">
            <Grid ColumnDefinitions="*, Auto">
                <HorizontalStackLayout Style="{StaticResource HeaderLinks}">
                    <Frame Style="{StaticResource HeaderTitel}">
                        <Label Text="Typotrainer" Style="{StaticResource Text18Bold}"/>
                    </Frame>
                    <Label x:Name="HeaderTitel"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Style="{StaticResource HeaderRechts}">
                    <Button Text="Dashboard" Clicked="PageDashboardClicked"/>
                    <Button Text="Instellingen" Clicked="PageInstellingenClicked"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>
        <ContentView x:Name="SubPage"/>
    </VerticalStackLayout>
</ContentPage>