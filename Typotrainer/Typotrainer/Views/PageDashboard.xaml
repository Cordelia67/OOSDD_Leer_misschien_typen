<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageDashboard">

    <Grid Style="{StaticResource DashGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linksboven: Oefening starten -->
        <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource FrameGrid200}">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Image Source="square_play.png" Style="{StaticResource Icon}" />
                    <Button Text="Oefening starten" Style="{StaticResource DashKnop}"
                            Clicked="PageOefeningClicked"/>
                </HorizontalStackLayout>
                <Label Text="Begin met een standaard typ oefening." Style="{StaticResource DashUitleg}" />
            </VerticalStackLayout>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageOefeningClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Rechtsboven: Resultaten en voortgang -->
        <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource FrameGrid200}">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Image Source="chart_column_increasing.png" Style="{StaticResource Icon}" />
                    <Button Text="Resultaten en voortgang" Style="{StaticResource DashKnop}"
                            Clicked="PageResultatenClicked"/>
                </HorizontalStackLayout>
                <Label Text="Bekijk je statistieken en prestaties." Style="{StaticResource DashUitleg}" />
            </VerticalStackLayout>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageResultatenClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Linksonder: Adaptieve oefening -->
        <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource FrameGrid200}">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Image Source="sparkles.png" Style="{StaticResource Icon}" />
                    <Button Text="Adaptieve oefening" Style="{StaticResource DashKnop}"
                            Clicked="PageAdaptieveOefeningClicked"/>
                </HorizontalStackLayout>
                <Label Text="Genereer een oefening op basis van je niveau." Style="{StaticResource DashUitleg}" />
            </VerticalStackLayout>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageAdaptieveOefeningClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Rechtsonder: Instellingen -->
        <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource FrameGrid200}">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Image Source="settings.png" Style="{StaticResource Icon}" />
                    <Button Text="Instellingen" Style="{StaticResource DashKnop}"
                            Clicked="PageInstellingenClicked"/>
                </HorizontalStackLayout>
                <Label Text="Pas je voorkeuren aan." Style="{StaticResource DashUitleg}" />
            </VerticalStackLayout>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageInstellingenClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Welkomsttekst onderaan -->
        <Frame Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Info}">
            <Label Text="Welkom terug! Kies een optie hierboven om te beginnen met oefenen of om je voortgang te bekijken."/>
        </Frame>
    </Grid>
</ContentView>