<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageDashboard">
    <Grid Padding="20" RowSpacing="20" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linksboven: Oefening starten -->
        <Button x:Name="BtnOefening"
                Grid.Row="0" Grid.Column="0"
                Text="Oefening starten"
                FontSize="24"
                FontAttributes="Bold"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="15"/>

        <!-- Rechtsboven: Resultaten en voortgang -->
        <Button x:Name="BtnResultaten"
                Grid.Row="0" Grid.Column="1"
                Text="Resultaten en voortgang"
                FontSize="24"
                FontAttributes="Bold"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="15"/>

        <!-- Linksonder: Adaptieve oefening -->
        <Button x:Name="BtnAdaptief"
                Grid.Row="1" Grid.Column="0"
                Text="Adaptieve oefening"
                FontSize="24"
                FontAttributes="Bold"
                BackgroundColor="#FF9800"
                TextColor="White"
                CornerRadius="15"/>

        <!-- Rechtsonder: Instellingen -->
        <Button x:Name="BtnInstellingen"
                Grid.Row="1" Grid.Column="1"
                Text="Instellingen"
                FontSize="24"
                FontAttributes="Bold"
                BackgroundColor="#9C27B0"
                TextColor="White"
                CornerRadius="15"/>
    </Grid>
</ContentView>