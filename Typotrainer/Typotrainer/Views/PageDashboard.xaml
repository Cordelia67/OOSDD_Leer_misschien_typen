<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageDashboard">
    
    <Grid Padding="15" RowSpacing="20" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linksboven: Oefening starten -->
        <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource FrameGrid200}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="square_play.png"
                           WidthRequest="40"
                           HeightRequest="40"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            BackgroundColor="Transparent"
                            Text="Oefening starten"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Clicked="PageOefeningClicked"/>
                </Grid>
                <Label Grid.Row="1"
                       Text="Begin met een standaard typ oefening."
                       Style="{StaticResource DashUitleg}" />
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageOefeningClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Rechtsboven: Resultaten en voortgang -->
        <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource FrameGrid200}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="chart_column_increasing.png"
                           WidthRequest="40"
                           HeightRequest="40"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            BackgroundColor="Transparent"
                            Text="Resultaten en voortgang"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Clicked="PageResultatenClicked"/>
                </Grid>
                <Label Grid.Row="1"
                       Text="Bekijk je statistieken en prestaties."
                       Style="{StaticResource DashUitleg}" />
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageResultatenClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Linksonder: Adaptieve oefening -->
        <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource FrameGrid200}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="sparkles.png"
                           WidthRequest="40"
                           HeightRequest="40"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            BackgroundColor="Transparent"
                            Text="Adaptieve oefening"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Clicked="PageAdaptieveOefeningClicked"/>
                </Grid>
                <Label Grid.Row="1"
                       Text="Genereer een oefening op basis van je niveau."
                       Style="{StaticResource DashUitleg}" />
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageAdaptieveOefeningClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Rechtsonder: Instellingen -->
        <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource FrameGrid200}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="settings.png"
                           WidthRequest="40"
                           HeightRequest="40"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            BackgroundColor="Transparent"
                            Text="Instellingen"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Clicked="PageInstellingenClicked"/>
                </Grid>
                <Label Grid.Row="1"
                       Text="Pas je voorkeuren aan."
                       Style="{StaticResource DashUitleg}" />
            </Grid>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageInstellingenClicked"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Welkomsttekst onderaan -->
        <Frame Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Info}">
            <Label Text="Welkom terug! Kies een optie hierboven om te beginnen met oefenen of om je voortgang te bekijken."/>
        </Frame>
    </Grid>
</ContentView>