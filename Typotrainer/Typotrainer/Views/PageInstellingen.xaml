<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Typotrainer.Views.PageInstellingen">
    <VerticalStackLayout>
        <Label Text="Pagina voor instellingen" />
        <Frame>
            <Button 
                Text="Test"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </Frame>
        <Entry 
            Placeholder="Test invoerveld"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Editor 
            Placeholder="Test tekstvak"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame Style="{StaticResource Foutmelding}">
            <Label Text="Foutmelding" />
        </Frame>
        <Frame Style="{StaticResource Info}">
            <Label Text="Informatie" />
        </Frame>
        <Label Text="Groen" Style="{StaticResource TextGroen}"/>
        <Label Text="Rood" Style="{StaticResource TextRood}"/>

    </VerticalStackLayout>
</ContentView>
